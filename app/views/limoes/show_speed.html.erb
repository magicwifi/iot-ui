<%= render "show_aside"  %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
 <section class="content-header">
        <h1>
             立磨压力报表
            <small>echarts sample</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Charts</a></li>
            <li class="active">转速报表</li>
        </ol>
    </section>
    <!-- Main content -->
<section class="content">
    <div class="callout callout-info">
        <h4>说明</h4>

        <p>压力报表用于展现立磨设备的七日内关键部件的转速变化，最大值，平均值走势，分布情况等。
        </p>
    </div>
    <div class="row">
        <div class="col-md-12">

            <!-- AREA CHART -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">立磨转速最大值&极限值&平均值&最小值</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <div id="main" style="width: 100%; height: 600px;"></div>
                    </div>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>

    </div>
    <!-- /.row -->
</section>


</div>
<script src="/superui/content/echarts.js" charset="utf-8"></script>
    <script src="/superui/content/ui/global/jQuery/jquery.min.js"></script>


   <script>
   $(function () {

        var datelist = <%=raw @datelist %>;
        var l03_list_max = <%=raw @l03_list_max %>;
        var l03_list_topvalue = <%=raw @l03_list_topvalue  %>;
        var l03_list_avg = <%=raw @l03_list_avg %>;
        var l03_list_min = <%=raw @l03_list_min %>;

            // 基于准备好的dom，初始化echarts实例
            var myChart = echarts.init(document.getElementById('main'));



option = {
    title: {
        text: '主辊1转速变化'
    },
    tooltip : {
        trigger: 'axis'
    },
    legend: {
        data:['主辊1转速Max','主辊1转速99.99%','主辊1转速Avg','主辊1转速Min']
    },
    toolbox: {
        feature: {
            saveAsImage: {}
        }
    },
    grid: {
        left: '3%',
        right: '4%',
        bottom: '3%',
        containLabel: true
    },
    xAxis : [
        {
            type : 'category',
            boundaryGap : false,
            data : datelist
        }
    ],
    yAxis : [
        {
            type : 'value'
        }
    ],
    series : [
        {
            name:'主辊1转速Max',
            type:'line',
            stack: '总量',
            areaStyle: {normal: {}},
            data:l03_list_max
        },
        {
            name:'主辊1转速99.99%',
            type:'line',
            stack: '总量',
            areaStyle: {normal: {}},
            data:l03_list_topvalue
        },
        {
            name:'主辊1转速Avg',
            type:'line',
            stack: '总量',
            areaStyle: {normal: {}},
            data:l03_list_avg
        },
        {
            name:'主辊1转速Min',
            type:'line',
            stack: '总量',
            areaStyle: {normal: {}},
            data:l03_list_min
        }
    ]
};
            // 使用刚指定的配置项和数据显示图表。
            myChart.setOption(option);
        });

    </script>

